<div class="filter">
    <%= search_form_for @query, url: user_management_path, remote: true do |s| %>
    <div class="form-row">
        <div class="form-group col-md-4">
            <%= s.text_field :name_cont, class: 'form-control form-control-sm', placeholder: 'name...', autocomplete: 'off' %>
        </div>
        <div class="form-group col-md-4">
            <%= s.text_field :email_cont, class: 'form-control form-control-sm', placeholder: 'email...', autocomplete: 'off' %>
        </div>
        <div class="form-group col-md-4">
            <%= s.submit 'Search', class: 'btn btn-primary btn-sm', data: { disable_with: "Searching..." } %>
            <%= link_to 'Clear', request.path, class: 'btn btn-default btn-sm', remote: true %>
        </div>
    </div>
    <% end %>
</div>
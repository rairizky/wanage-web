<%= content_for :title, 'User New' %>

<div class="tab-pane fade show active" id="tab-account" >
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Create One</h4>
        </div>
        <div class="card-body">
            <%= form_with model: @user, url: user_create_path, local: true do |f| %>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="font-weight-semibold">Name:</label>
                    <%= f.text_field :name, class: @user.errors[:name].any? ? 'form-control is-invalid' : 'form-control', placeholder: 'name...' %>
                    <% if @user.errors[:name].any? %>
                        <div class="invalid-feedback">
                            <%= @user.errors[:name].first %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="font-weight-semibold">Email:</label>
                    <%= f.email_field :email, class: @user.errors[:email].any? ? 'form-control is-invalid' : 'form-control', placeholder: 'mail@example.com' %>
                    <% if @user.errors[:email].any? %>
                        <div class="invalid-feedback">
                            <%= @user.errors[:email].first %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="font-weight-semibold">Password:</label>
                    <%= f.password_field :password, class: @user.errors[:password].any? ? 'form-control is-invalid' : 'form-control', placeholder: '••••••' %>
                    <% if @user.errors[:password].any? %>
                        <div class="invalid-feedback">
                            <%= @user.errors[:password].first %>
                        </div>
                    <% end %>
                </div>
                <div class="form-group col-md-6">
                    <label class="font-weight-semibold">Password Confirmation:</label>
                    <%= f.password_field :password_confirmation, class: @user.errors[:password_confirmation].any? ? 'form-control is-invalid' : 'form-control', placeholder: '••••••' %>
                    <% if @user.errors[:password_confirmation].any? %>
                        <div class="invalid-feedback">
                            <%= @user.errors[:password_confirmation].first %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="font-weight-semibold">Role</label>
                    <%= f.select(:role, ['admin', 'supervisor', 'employee'], {include_blank: true, disabled: '--'}, { class: @user.errors[:role].any? ? 'form-control is-invalid' : 'form-control' }) %>
                    <% if @user.errors[:role].any? %>
                        <div class="invalid-feedback">
                            <%= @user.errors[:role].first %>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12 d-flex justify-content-end">
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>

<%= form_with model: @profile, url: profile_create_path, html: { multipart: true }, local: true do |f| %>
<div class="form-row">
    <div class="form-group col-md-6">
        <label class="font-weight-semibold">Name:</label>
        <%= f.text_field :name, class: 'form-control', placeholder: 'name...', value: @user.name.titleize, disabled: true %>
    </div>
    <div class="form-group col-md-6">
        <label class="font-weight-semibold">Email:</label>
        <%= f.email_field :email, class: 'form-control', placeholder: 'mail@example.com', value: @user.email, disabled: true %>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        <label class="font-weight-semibold">Avatar:</label>
        <%= f.file_field :avatar, class: @profile.errors[:avatar].any? ? 'form-control is-invalid' : 'form-control', placeholder: '08xxx' %>
        <% if @profile.errors[:avatar].any? %>
            <div class="invalid-feedback">
                <%= @profile.errors[:avatar].first %>
            </div>
        <% end %>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        <label class="font-weight-semibold">Phone Number:</label>
        <%= f.text_field :phone, class: @profile.errors[:phone].any? ? 'form-control is-invalid' : 'form-control', placeholder: '08xxx' %>
        <% if @profile.errors[:phone].any? %>
            <div class="invalid-feedback">
                <%= @profile.errors[:phone].first %>
            </div>
        <% end %>
    </div>
    <div class="form-group col-md-4">
        <label class="font-weight-semibold">Date of Birth:</label>
        <%= f.date_field :dob, class: @profile.errors[:dob].any? ? 'form-control is-invalid datepicker-input' : 'form-control datepicker-input', placeholder: 'date of birth...' %>
        <% if @profile.errors[:dob].any? %>
            <div class="invalid-feedback">
                <%= @profile.errors[:dob].first %>
            </div>
        <% end %>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-12">
        <label class="font-weight-semibold" for="address">Address:</label>
        <%= f.text_area :address, class: @profile.errors[:address].any? ? 'form-control is-invalid' : 'form-control', placeholder: 'address...' %>
        <% if @profile.errors[:address].any? %>
            <div class="invalid-feedback">
                <%= @profile.errors[:address].first %>
            </div>
        <% end %>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-12 d-flex justify-content-end">
        <button class="btn btn-primary">Save</button>
    </div>
</div>
<% end %>